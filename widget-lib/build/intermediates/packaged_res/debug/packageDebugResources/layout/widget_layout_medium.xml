<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/widgetRoot" android:layout_width="338dp" android:layout_height="158dp" android:orientation="vertical" android:padding="16dp" android:background="@color/widget_bg_default">

    <!-- Header -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="24dp">

        <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stroom" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/widget_text_primary" />

        <ImageView android:id="@+id/light" android:layout_width="27dp" android:layout_height="27dp" android:src="@drawable/light_icon" android:contentDescription="Light Icon" android:layout_marginLeft="204dp" android:tint="@color/primary" />
    </LinearLayout>

    <!-- Prices -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <!-- Highest -->
        <LinearLayout android:layout_width="145dp" android:layout_height="wrap_content" android:orientation="vertical">

            <TextView android:id="@+id/highestText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Huidige prijs" android:textSize="14sp" android:textColor="@color/widget_text_secondary" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                <TextView android:id="@+id/price_today" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hoogste" android:textSize="26sp" android:textStyle="bold" android:textColor="@color/widget_text_primary" />

                <TextView android:id="@+id/unitHigh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/ kWh" android:textSize="14sp" android:textColor="@color/widget_text_primary" android:layout_marginLeft="1dp" />
            </LinearLayout>

            <TextView android:id="@+id/time_range" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="08:00 - 09:00" android:textSize="14sp" android:textColor="@color/primary" android:textStyle="bold" android:paddingTop="1dp" />
        </LinearLayout>

        <!-- Lowest -->
        <LinearLayout android:layout_width="145dp" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginLeft="16dp">

            <TextView android:id="@+id/lowestText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Laagste prijs" android:textSize="14sp" android:textColor="@color/widget_text_secondary" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                <TextView android:id="@+id/price_min" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Laagste" android:textSize="26sp" android:textStyle="bold" android:textColor="@color/widget_text_primary" />

                <TextView android:id="@+id/unitLow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/ kWh" android:textSize="14sp" android:textColor="@color/widget_text_primary" android:layout_marginLeft="1dp" />
            </LinearLayout>

            <TextView android:id="@+id/lowest_hour" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="om 02:00" android:textSize="14sp" android:textColor="@color/primary" android:textStyle="bold" android:paddingTop="1dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>