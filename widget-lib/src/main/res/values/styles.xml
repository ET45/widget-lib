<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Entire primary colored splash screen -->
        <item name="android:windowSplashScreenBackground">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
        <!-- Remove the app icon on the primary splash screen on startup (uniform with iOS) -->
        <item name="android:windowSplashScreenAnimatedIcon">@color/primary</item>
        <!-- Translucent navigation -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SplashScreen_SplashTheme">
        <!-- Primary color top bar -->
        <item name="colorPrimaryDark">@color/primary</item>
        <!-- Translucent navigation -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
